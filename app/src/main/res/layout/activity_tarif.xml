<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.TarifActivity">


    <TextView
        android:id="@+id/textTarifAdi"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/background_tur"
        android:drawableStart="?attr/homeAsUpIndicator"
        android:gravity="center"
        android:text="text"
        android:onClick="TextViewFonk"
        android:padding="2dp"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewTarif"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        </ScrollView>


    </LinearLayout>

</LinearLayout>